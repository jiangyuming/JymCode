<html>
<head>
    <meta charset="UTF-8" />
    <title>Highcharts )</title>
    <link rel="icon" href="https://static.jianshukeji.com/highcharts/images/favicon.ico">

    <script src="http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="http://code.highcharts.com/highcharts.js"></script>

    <script src="https://img.hcharts.cn/highcharts/modules/exporting.js"></script>
    <script src="https://img.hcharts.cn/highcharts-plugins/highcharts-zh_CN.js"></script>
</head>
<body>
    <div id="container" style="width:550px;height:400px;margin: 0 auto"></div>
    <script language="JavaScript">
        var chart = Highcharts.chart('container', {
            chart: {
                zoomType: 'xy'
            },
            // 版权信息及链接
             credits : {
                enabled: false,
                href:'https://www.baidu.com/'
            },
            title: {
                text: ''
            },
            subtitle: {
                text: ''
            },
            xAxis: [{
                categories: ['1999', '2000', '2001', '2002', '2003', '2004', '2005', '2006', '2007', '2008', '2009', '2010', '2011', '2012', '2013', '2014', '2015', '2016', '2017'],
                title: {
                    enabled: true,
                    text: '年份'
                },
                crosshair: true
            }],
            yAxis: [{ // Primary yAxis
                labels: {
                    format: '{value}mm',
                    style: {
                        color: Highcharts.getOptions().colors[1]
                    }
                },
                title: {
                    text: '降水量(mm)',
                    style: {
                        color: Highcharts.getOptions().colors[1]
                    }
                }
            }, { // Secondary yAxis
                title: {
                    text: '埋深(m)',
                    style: {
                        color: Highcharts.getOptions().colors[0]
                    }
                },
                labels: {
                    format: '{value} m',
                    style: {
                        color: Highcharts.getOptions().colors[0]
                    }
                },
                opposite: true,
                reversed: true,//  设置 值 倒序翻转
            }],
            tooltip: {
                shared: true
            },
            //legend: {
            //    layout: 'vertical',
            //    align: 'left',
            //    x: 120,
            //    verticalAlign: 'top',
            //    y: 100,
            //    floating: true,
            //    backgroundColor: (Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'
            //},
            series: [{
                name: '降雨量(mm)',
                type: 'column',

                data: [320, 320, 320, 320, 320, 320, 320, 420, 420, 420, 420, 420, 420, 820, 820, 820, 820, 820, 820],
                tooltip: {
                    valueSuffix: ' mm'
                }
            }, {
                name: '埋深(m)',
                type: 'spline',
                yAxis: 1,
                data: [14.21, 15.36, 16.42, 17.48, 18.33, 19.04, 20.21, 21.52, 22.79, 22.92, 24.07, 24.92, 24.94, 24.27, 24.52, 25.60, 25.75, 25.23, 24.97],
                tooltip: {
                    valueSuffix: 'm'
                }
            }],

            //  设置  埋深  数据显示值标签
            plotOptions: {
                spline: {
                    dataLabels: {
                        enabled: true,

                    },

                    enableMouseTracking: true,

                }
            },



        });
    </script>
</body>
</html>